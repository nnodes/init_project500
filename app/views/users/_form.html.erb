<%= simple_form_for(@user, wrapper: false, label: false) do |f| %>
  <%= f.error_notification %>
  <div class="form-group">
    <label class="col-sm-4 control-label">Email</label>
    <div class="col-sm-8">
    <%= f.input :email, input_html: { class: 'form-control' }, label: false %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Activo</label>
    <div class="col-sm-8">
      <%= f.input :active, as: :radio_buttons, item_wrapper_class: 'radio-inline', label: false  %>
    </div>
  </div>
  <div class="form-group">
    <p class="col-sm-8 col-sm-offset-4 italic">El usuario solo podrá iniciar sesión si tiene al menos un rol asignado y está activo.</p>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Contraseña</label>
    <div class="col-sm-8">
    <%= f.input :password, input_html: { class: 'form-control' }, label: false %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-4 control-label">Confirma Contraseña</label>
    <div class="col-sm-8">
    <%= f.input :password_confirmation, input_html: { class: 'form-control' }, label: false %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %> <%= link_to 'Volver', users_path, class: "btn btn-primary" %>
  </div>
<% end %>
